<!-- implement a value for the <title> element that 
    describes the content of the view -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<!-- to display messages in a view -->
<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<!-- form -->
 <div class="login">
    <p>Confirm Deletion - The delete is permanent.</p>
    <form  action="/inv/delete" method="post">
        <label for="invMake">Make:</label>
        <input type="text" name="inv_make" id="invMake" required value="<%= locals.inv_make %>" readonly>
        <br>
        <label for="invModel">Model:</label>
        <input type="text" id="invModel" name="inv_model" required value="<%= locals.inv_model %>" readonly>
        <br>
        <label for="invYear">Year:</label>
        <input type="text" id="invYear" name="inv_year" pattern="\d{4}" maxlength="4" required value="<%= locals.inv_year %>" readonly>
        <br>
        <label for="invPrice">Price:</label>
        <input type="number" id="invPrice" name="inv_price" required value="<%= locals.inv_price %>" readonly>
        <br>
        <button id="submit-button" type="submit">Delete vehicle</button>
        <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>
    </form>
</div>